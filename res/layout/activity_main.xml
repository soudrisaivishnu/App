<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the distance travelled"
            android:inputType="numberDecimal"
            android:paddingStart="32dp"
            android:paddingTop="132dp" />

        <EditText
            android:id="@+id/edPetrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the amount of Petrol"
            android:inputType="numberDecimal"
            android:paddingStart="32dp"
            android:paddingTop="32dp" />

        <TextView
            android:id="@+id/tvMilage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingTop="32dp" />



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="84dp">

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="6dp"
                android:text="Calculate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnSubmit" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="9dp"
                android:text="Submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnHistory"
                app:layout_constraintStart_toEndOf="@+id/btnCalculate" />

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="22dp"
                android:text="History"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnSubmit" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>